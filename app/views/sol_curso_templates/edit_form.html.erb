<!-- Validation failure messages -->
<% if @sol_curso.errors.any? %>
  <% @sol_curso.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit sol curso #<%= @sol_curso.id %>
</h1>

<hr>

<form action="/update_sol_curso/<%= @sol_curso.id %>" method="post">
  <!-- Label and input for solucion_id -->
  <div class="form-group">
    <label for="solucion_id">
      Solucion
    </label>

    <input type="text" id="solucion_id" name="solucion_id" class="form-control" value="<%= @sol_curso.solucion_id %>">
  </div>

  <!-- Label and input for posicion -->
  <div class="form-group">
    <label for="posicion">
      Posicion
    </label>

    <input type="text" id="posicion" name="posicion" class="form-control" value="<%= @sol_curso.posicion %>">
  </div>

  <!-- Label and input for asignatura_id -->
  <div class="form-group">
    <label for="asignatura_id">
      Asignatura
    </label>

    <input type="text" id="asignatura_id" name="asignatura_id" class="form-control" value="<%= @sol_curso.asignatura_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update sol curso
  </button>
</form>

<hr>

<a href="/sol_cursos">
  Go back
</a>
