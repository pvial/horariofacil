<!-- Validation failure messages -->
<% if @requerimiento.errors.any? %>
  <% @requerimiento.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit requerimiento #<%= @requerimiento.id %>
</h1>

<hr>

<form action="/update_requerimiento/<%= @requerimiento.id %>" method="post">
  <!-- Label and input for nivel_id -->
  <div class="form-group">
    <label for="nivel_id">
      Nivel
    </label>

    <input type="text" id="nivel_id" name="nivel_id" class="form-control" value="<%= @requerimiento.nivel_id %>">
  </div>

  <!-- Label and input for ramo_id -->
  <div class="form-group">
    <label for="ramo_id">
      Ramo
    </label>

    <input type="text" id="ramo_id" name="ramo_id" class="form-control" value="<%= @requerimiento.ramo_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update requerimiento
  </button>
</form>

<hr>

<a href="/requerimientos">
  Go back
</a>
