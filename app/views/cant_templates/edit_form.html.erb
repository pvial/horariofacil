<!-- Validation failure messages -->
<% if @cant.errors.any? %>
  <% @cant.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit cant #<%= @cant.id %>
</h1>

<hr>

<form action="/update_cant/<%= @cant.id %>" method="post">
  <!-- Label and input for curso_id -->
  <div class="form-group">
    <label for="curso_id">
      Curso
    </label>

    <input type="text" id="curso_id" name="curso_id" class="form-control" value="<%= @cant.curso_id %>">
  </div>

  <!-- Label and input for profesor_id -->
  <div class="form-group">
    <label for="profesor_id">
      Profesor
    </label>

    <input type="text" id="profesor_id" name="profesor_id" class="form-control" value="<%= @cant.profesor_id %>">
  </div>

  <!-- Label and input for creador -->
  <div class="form-group">
    <label for="creador">
      Creador
    </label>

    <input type="text" id="creador" name="creador" class="form-control" value="<%= @cant.creador %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update cant
  </button>
</form>

<hr>

<a href="/cants">
  Go back
</a>
