<!-- Validation failure messages -->
<% if @solucion.errors.any? %>
  <% @solucion.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit solucion #<%= @solucion.id %>
</h1>

<hr>

<form action="/update_solucion/<%= @solucion.id %>" method="post">
  <!-- Label and input for iteracion -->
  <div class="form-group">
    <label for="iteracion">
      Iteracion
    </label>

    <input type="text" id="iteracion" name="iteracion" class="form-control" value="<%= @solucion.iteracion %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update solucion
  </button>
</form>

<hr>

<a href="/solucions">
  Go back
</a>
