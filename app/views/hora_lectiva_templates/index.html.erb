<h1>
  All hora lectivas
</h1>

<a href="/hora_lectivas/new">
  Add a new hora lectiva
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Dia
    </th>

    <th>
      Posicion
    </th>

    <th>
      Activo
    </th>

    <th>
      Profesor
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @hora_lectivas.each do |hora_lectiva| %>
  <tr>
    <td>
      <%= hora_lectiva.id %>
    </td>

    <td>
      <%= hora_lectiva.dia_id %>
    </td>

    <td>
      <%= hora_lectiva.posicion %>
    </td>

    <td>
      <%= hora_lectiva.activo %>
    </td>

    <td>
      <%= hora_lectiva.profesor_id %>
    </td>

    <td>
      <%= time_ago_in_words(hora_lectiva.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(hora_lectiva.updated_at) %> ago
    </td>

    <td>
      <a href="/hora_lectivas/<%= hora_lectiva.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
