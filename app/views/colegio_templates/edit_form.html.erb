<!-- Validation failure messages -->
<% if @colegio.errors.any? %>
  <% @colegio.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit colegio #<%= @colegio.id %>
</h1>

<hr>

<form action="/update_colegio/<%= @colegio.id %>" method="post">
  <!-- Label and input for nombre -->
  <div class="form-group">
    <label for="nombre">
      Nombre
    </label>

    <input type="text" id="nombre" name="nombre" class="form-control" value="<%= @colegio.nombre %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update colegio
  </button>
</form>

<hr>

<a href="/colegios">
  Go back
</a>
