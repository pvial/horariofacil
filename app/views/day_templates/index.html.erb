<h1>
  All days
</h1>

<a href="/days/new">
  Add a new day
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Nombre
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @days.each do |day| %>
  <tr>
    <td>
      <%= day.id %>
    </td>

    <td>
      <%= day.nombre %>
    </td>

    <td>
      <%= time_ago_in_words(day.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(day.updated_at) %> ago
    </td>

    <td>
      <a href="/days/<%= day.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
